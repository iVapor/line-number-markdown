{
  "name": "Line Number Markdown",
  "version": "1.0",
  "description": "Show line number in Markdown code block.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["hotReload.js"]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2,
  "content_scripts":
  [
    {
      "matches": ["<all_urls>"],
      "js": ["tools.js","index.js"],
      "css": ["index.css"],
      "run_t": "document_start"
    }
  ]
}
